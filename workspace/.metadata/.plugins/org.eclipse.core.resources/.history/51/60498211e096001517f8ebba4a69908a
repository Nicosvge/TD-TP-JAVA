package edu.iut.app;

public class CommandLineOption<T> {
	
	public enum OptionType{
		NONE("None"),
		FILE("File"),
		STRING("String"),
		INTEGER("Integer"),
		DOUBLE("Double"),
		BOOLEAN("Boolean"),
		NOVALUE("NoValue");
		private String optionType;
		
		OptionType(String optionType) {
			this.optionType = optionType;
		}
		
		public String toString() {
			return optionType;
		}		
	}
	
	protected String key;
	protected String description;
	protected T defaultValue;
	protected T value;
	protected OptionType optionType;
	
	 
	public CommandLineOption() {		
		this.key=null; this.value = null; this.description = null;
	}
	
	public CommandLineOption(final OptionType optionType, final String key, final String description, final T defaultValue) {
		this.optionType = optionType;
		this.key = key;
		
	}
	public void setOption(OptionType optionType, String key, String description, ValueType defaultValue) {
		/* EX1 : Affecter les attributs */
	}
	public  void setValue(T value) {
		this.value = value;
	}
		
	public String getKey() {
		return this.key;
	}
	public String getDescription() {
		return this.description;
	}
	public T getValue() {
		if (value != null) {
			return value;
		}
		return defaultValue;
	}
	public OptionType getOptionType() {
		return optionType;
	}

}
